{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  {{#with main}}
  <main>
    <section>

      {{> title data="Work history" big=true}}

      <div>
        <ul>
          {{#each works}}
          <li>
            <div>{{position}}</div>

            <br>

            <div>
              {{duration.from}} -
              {{#if duration.to}}
              {{duration.to}}
              {{else}}
              (досі працюємо)
              {{/if}}
            </div>

            <br>
            {{#if company.url}}
            <div>{{> link text=company.name href=company.url blank=true noLine=true}}</div>
            {{esle}}
            <b>{{company.name}}</b>
            {{/if}}
            <br>
            <br>

            <div>
              <strong>Projects ({{projectAmount}})</strong>
            </div>

            <br>

            <ul>
              {{#each projects}}
              <li>
                <div>{{> link text=name href=url blank=true noLine=true}}</div>

                <br>

                <div>
                  <p>{{about}}</p>
                </div>

                <br>

                <div>
                  <em>Projects stacks ({{stacksAmount}})</em>
                </div>

                <br>

                <ul>
                  <div>
                    {{#each stacks}}
                    <li>{{name}}</li>
                    {{/each}}
                  </div>
                </ul>

                <br>

                <div>
                  <em>Projects awards ({{awardsAmount}})</em>
                </div>

                <br>

                <ul>
                  <div>
                    {{#each awards}}
                    <li>{{name}}</li>
                    {{/each}}
                  </div>
                </ul>
              </li>
              {{/each}}
            </ul>
          </li>
          <br>
          {{/each}}
        </ul>
      </div>

    </section>

    </section>
  </main>
  {{/with}}
</div>

