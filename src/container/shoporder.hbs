<main class="row p-3">
  <div class="col-12 mb-5 my-2">
    {{#with navigation}}
    <div class="nav nav-tabs">
      {{#each links}}
      <div class="nav-item">
        <a class="nav-link {{#if @last}} disabled {{/if}}" href={{href}}>{{text}}</a>
      </div>
      {{/each}}
    </div>
    {{/with}}
  </div>
  <h1 class="col-12">{{header}}</h1>
  <div class="row">
    <div class="col-8">
      {{#with contacts_data}}
      <h2 class="col-8 py-5">{{title}}</h2>
      <div class="col-8">
        {{#each buttons}}
        {{#if isPrimary includeZero=true}}
        <div class="btn btn-warning">{{./text}}</div>
        {{/if}}
        {{#if isOutline includeZero=true}}
        <div class="btn btn-outline-warning">{{./text}}</div>
        {{/if}}
        {{/each}}
      </div>
      <div>
        {{#with form}}
        <div class="row my-3 col-8">
          {{#with input}}
          <div class="col-6 pb-2">
            {{#with surname}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" {{placeholder}}>
            <div class="form-text">{{caption}}</div>
            {{/with}}
          </div>
          <div class="col-6">
            {{#with name}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" {{placeholder}}>
            <div class="form-text">{{caption}}</div>
            {{/with}}
          </div>
          <div class="col-6">
            {{#with phone}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" {{placeholder}}>
            <div class="form-text">{{caption}}</div>
            {{/with}}
          </div>
          <div class="col-6">
            {{#with email}}
            <label class="form-label">{{label}}</label>
            <input class="form-control" {{placeholder}}>
            <div class="form-text">{{caption}}</div>
            {{/with}}
          </div>
          {{/with}}
        </div>
        <div>
          <hr>
        </div>
        <div>
          {{#each switch}}
          <div class="col-8 py-2">
            <div class="form-check form-switch">
              <label class="form-check-label">{{./text}}</label>
              <input type="checkbox" class="form-check-input {{#if @first}} disabled {{/if}}">
            </div>
          </div>
          {{/each}}
        </div>
        {{/with}}
      </div>
      {{/with}}
    </div>
    <div class="col-8">
      <hr>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          {{#each action_block}}
          {{#if isSuccess includeZero=true}}
          <p><button class="btn btn-success">{{text}}</button></p>
          {{/if}}
          {{#if isDanger includeZero=true}}
          <p><button class="btn btn-danger">{{text}}</button></p>
          {{/if}}
          {{#if isInfo includeZero=true}}
          <p><button class="btn btn-info">{{text}}</button></p>
          {{/if}}
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</main>